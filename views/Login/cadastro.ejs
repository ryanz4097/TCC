<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title> Cadastro </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('../head'); %>
</head>

<body>
    <%- include('../Navegacao/navLoginCadastro'); %>
        <section class="mt-5">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-6 mt-5">
                        <img src="imagens/GEinicio.png" width="95%" alt="Sample image">
                    </div>
                    <div class="col-lg-4 ml-5">
                        <div class="text-center mt-5 mb-3" id="login-titulo">
                            <h3>Faça seu Cadastro</h3>
                        </div>
                        <form action="/cadastro" method="POST" enctype="multipart/form-data">

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" id="name" name="nome" placeholder="Digite seu nome"
                                    name="nome" required/>
                                <label class="form-label" for="form3Example3">Nome:</label>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="email" class="form-control form-control-lg" placeholder="Digite seu email"
                                    name="email" required/>
                                <label class="form-label" for="form3Example3">Endereço de mail</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" class="form-control form-control-lg"
                                    placeholder="Digite sua senha" name="senha" required/>
                                <label class="form-label" for="form3Example4">Senha</label>
                            </div>
                            <% if(mensagem !="1" ) {%>
                                <div style="display: flex;">
                                    <i class="mt-1 mr-2 fa-solid fa-triangle-exclamation" style="color: red;"></i>
                                    <p style="color: red;">
    
                                        <%=mensagem%>
    
                                    </p>
                                </div>
                                <%}%>

                            <div class="form-outline mb-3">
                                <input type="file" class="form-control form-control-lg" name="imagem"required>
                                <label class="form-label" for="form3Example4">Foto Perfil</label>
                            </div>

                            <div class="text-center text-lg-start pt-2">
                                <button type="submit  " class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Cadastrar-se</button>
                                <p class="small fw-bold mt-2 pt-1 mb-0">Já possui conta? <a href="login"
                                        class="link-danger">Faça login</a></p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="rodape col-lg-12 d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5">
                <!-- Copyright -->
                <div class="text-white mb-0">
                    © 2023. Todos direitos reservados à Ryan Samuel.
                </div>
                <!-- Copyright -->

                <!-- Right -->
                <div>
                    <a href="https://www.instagram.com/gremiospeech/" class="text-white me-4">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
                <!-- Right -->
            </div>
        </section>
</body>

</html>