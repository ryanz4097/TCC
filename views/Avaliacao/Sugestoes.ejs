<!DOCTYPE html>

<head>
    <%- include('../head'); %>
    <title>Sugestões</title>
</head>

<body style="background-color: rgb(247, 247, 247);">
    <header>
        <%- include('../Navegacao/navegacao'); %>
    </header>

    <div class="row mt-5" style="max-width: 100%; max-height: 100%;">
        <div class="col-lg-7" style="margin-left: 8%; height: 100%;">
            <h2 id="tituloSugerir" class="mb-5">Sugestões</h2>
            <% dadosAvaliacoes.slice(-8).reverse().forEach(function(avaliacao) { %>
                <div id="avaliacaoUser" class="mb-4 border">
                    <p id="areaDaSugestao">
                        Área: <%=avaliacao.area%>
                    </p>
                    <p>Nota: <%=avaliacao.estrelas%></p>
                    <p id="parteSugestao">
                        Comentário: <%=avaliacao.mensagem%>
                    </p>
                </div>
                <hr style="width: 100%;" class="mb-4">
                <%})%>
        </div>


        <div class="col-lg-2" style="margin-left: 5%; height: 100%;">
            <div id="caixaDirSug">
                <h3 id="tituloAvaliacao">Avaliações</h3>
                <% mediaAvaliacoesPorArea.forEach(function(valor) { %>
                <div>
                    <p id="areaDaAvaliacao"><%=valor.area%>: <%=parseInt(valor.media_estrelas)%></p>
                    <hr class="linhaAvaliacoes">
                </div>
                <%})%>
            </div>
        </div>
    </div>
</body>